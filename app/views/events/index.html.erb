<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opendate</th>
      <th>Opendate memo</th>
      <th>Address</th>
      <th>Postal</th>
      <th>Address embed</th>
      <th>Fee</th>
      <th>Limit</th>
      <th>Desc short</th>
      <th>Desc long</th>
      <th>Picture main</th>
      <th>Picture 1</th>
      <th>Picture 2</th>
      <th>Picture 3</th>
      <th>Url</th>
      <th>Url facebook</th>
      <th>Url twitter</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user_id %></td>
        <td><%= event.title %></td>
        <td><%= event.opendate %></td>
        <td><%= event.opendate_memo %></td>
        <td><%= event.address %></td>
        <td><%= event.postal %></td>
        <td><%= event.address_embed %></td>
        <td><%= event.fee %></td>
        <td><%= event.limit %></td>
        <td><%= event.desc_short %></td>
        <td><%= event.desc_long %></td>
        <td><%= event.picture_main %></td>
        <td><%= event.picture_1 %></td>
        <td><%= event.picture_2 %></td>
        <td><%= event.picture_3 %></td>
        <td><%= event.url %></td>
        <td><%= event.url_facebook %></td>
        <td><%= event.url_twitter %></td>
        <td><%= event.visible %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

