<h1><%= @event.title %></h1>
<div class="row event-detail">
  <div class="col-md-6">
    <table class="table">
    <tr>
      <th><span class="glyphicon glyphicon-time"></span> 日時</th>
      <td><%= @event.opendate_short %></td>
    </tr>
    <tr>
      <th><span class="glyphicon glyphicon-map-marker"></span> 場所</th>
      <td><%= @event.address %></td>
    </tr>
    <tr>
      <th><span class="glyphicon glyphicon-user"></span> 主催者</th>
      <td><%= link_to @event.user.name, events_by_path(@event.user.id) %></td>
    </tr>
    <tr>
      <th><span class="glyphicon glyphicon-yen"></span> 参加費</th>
      <td><%= @event.fee %></td>
    </tr>
    <tr>
      <th><span class="glyphicon glyphicon-plus"></span> 定員</th>
      <td><%= @event.limit %></td>
    </tr>
    <tr>
      <th>概要</th>
      <td><%= @event.desc_short %></td>
    </tr>
    <tr>
      <th>URL</th>
      <td>
        <%= (link_to @event.url) if @event.url %>
        <%= @event.url_facebook %>
        <%= @event.url_twitter %>
      </td>
    </tr>
  </table>
</div>
<div class="col-md-3">
<%= image_tag events_picture_path(@event.id,"main"), class: "img-rounded" %>
</div>
<div class="col-md-3">
  <%= image_tag events_picture_path(@event.id,"1"), class: "img-rounded" %>
</div>
</div>
<div class="row event-detail">
  <div class="col-md-6">
    <p>
      <%= @event.desc_long %>
    </p>
  </div>
  <div class="col-md-3">
    <%= image_tag events_picture_path(@event.id,"2"), class: "img-rounded" %>
  </div>
  <div class="col-md-3">
    <%= image_tag events_picture_path(@event.id,"3"), class: "img-rounded" %>
  </div>
</div>

<hr/>
<% if user_signed_in? && current_user.id == @event.user_id %>
<div class="row">
  <div class="col-md-12">
<%= link_to 'Edit', edit_event_path(@event), class: "btn btn-default" %>
<%= link_to 'Back', events_path, class: "btn btn-default" %>
</div>
</div>
<% end %>
